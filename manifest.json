{
	"name": "AutoScript",
	"description": "Automatically run a JavaScript script based on certain conditions",
	"manifest_version": 3,
	"version": "1.0.0",
	"background": {
		"service_worker": "src/main.js"
	},
	"options_page": "src/options/index.html",
	"action": {
		"default_popup": "src/popup/index.html"
	},
	"permissions": ["storage", "activeTab", "scripting", "tabs", "webRequest"]
}